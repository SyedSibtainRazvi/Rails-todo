<table class="min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Task Title</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Completed</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @todos.each do |todo| %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= todo.title %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= todo.completed ? "Yes" : "No" %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium flex space-x-4">
          <%= link_to "Show", todo, class: "text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Edit", edit_todo_path(todo), class: "text-indigo-600 hover:text-indigo-900" %>
          <%= button_to "Destroy", todo, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
